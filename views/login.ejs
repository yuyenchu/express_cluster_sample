<!-- views/login.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Login</title>
        <link rel="icon" type="image/x-icon" href="/favicon.ico">
        <link href="/css/style.css" rel="stylesheet" type="text/css" >
    </head>
    <body>
        <header>
            <a href="#" class="logo">Logo</a>
            <nav id="swup-nav">
                <a href="/home" class="inactive">Home</a>
                <a href="/memo" class="inactive">Memo</a>
                <a href="/login" class="login">Login</a>
            </nav>
        </header>
        <div class="spinner"></div>
        <main id="swup" class="transition-fade">
            <div id="container" class="container">
                <div class="overlay-container">
                    <div class="overlay">
                        <div class="box overlay-left">
                            <h2>Already have an account?</h2>
                            <button id="signIn" class="signinBtn">Sign in</button>
                        </div>
                        <div class="box overlay-right">
                            <h2>Don't have an account?</h2>
                            <button id="signUp" class="signupBtn">Sign up</button>   
                        </div>
                    </div>
                </div>
                <div class="form-container signin-container">
                    <form action="/auth/login" method="POST">
                        <h2>Login form</h2>
                        <input type="text" name="username" placeholder="username"/>
                        <input type="text" name="password" placeholder="password"/>
                        <button type="submit">Login</button>
                    </form>
                </div>
                <div class="form-container signup-container">
                    <form action="/auth/register" method="POST">
                        <h2>Signup form</h2>
                        <input type="text" name="username" placeholder="enter a username"/>
                        <input type="text" name="password" placeholder="enter a password"/>
                        <button type="submit">Signup</button>
                    </form>
                </div>
            </div>
        </main>
        <script>
            document.querySelector('#signUp').addEventListener('click', () => {
                container.classList.add("right-panel-active");
            });
            document.querySelector('#signIn').addEventListener('click', () => {
                container.classList.remove("right-panel-active");
            });
        </script>
    </body>
</html>