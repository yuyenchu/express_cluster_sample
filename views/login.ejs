<!-- views/login.ejs -->

<!DOCTYPE html>
<html lang="en">
    <head>
        <link href="/css/style.css" rel="stylesheet" type="text/css" >
    </head>
    <body>
        <header>
            <a href="#" class="logo">Logo</a>
            <nav id="swup-nav">
                <a href="/home" class="inactive">Home</a>
                <a href="/memo" class="inactive">Memo</a>
                <a href="/login" class="login">Login</a>
            </nav>
        </header>
        <div class="spinner"></div>
        <main id="swup" class="transition-fade">
            <div>
                <div style="border: 1px solid #000; border-radius: 3px; margin:20px; padding: 10px;">
                    <h3>
                        Login form
                    </h3>
                    <form action="/auth/login" method="POST">
                        <input type="text" name="username" placeholder="username"/>
                        <input type="text" name="password" placeholder="password"/>
                        <button type="submit">Login</button>
                    </form>
                </div>
                <div style="border: 1px solid #000; border-radius: 3px; margin:20px; padding: 10px;">
                    <h3>
                        Signup form
                    </h3>
                    <form action="/auth/register" method="POST">
                        <input type="text" name="username" placeholder="enter a username"/>
                        <input type="text" name="password" placeholder="enter a password"/>
                        <button type="submit">Signup</button>
                    </form>
                </div>
            </div>
            <h3 style="color: <%= messageColor %>;">
                <%= message %>
            </h3>
        </main>
    </body>
</html>